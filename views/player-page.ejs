<html>
  <head>
    <title>Todo Play</title>
    <link rel="shortcut icon" href="../images/todo.ico">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous"></script>
    <link href="/stylesheets/player-page.css" rel="stylesheet" type="text/css"/>
  </head>
  <body>
    <div>
      <a href="../todo">
        <img src="../images/todo.ico" alt="">
        <label>Todo Play</label>
      </a>
    </div>
    <br>
    <div id="player-table">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>To do</th>
            <th>Phonenumber</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          <% for(data of dataPlayer) { %>
            <tr>
              <td><%= data.namePlayer %></td>
              <td><%= data.email %></td>
              <td><%= data.position %></td>
              <td><%= data.phonenumber %></td>
              <td><%= data.address %></td>
              <th>
                <button type="submit">Detail</button>
                <form action="../player/edit/<%= data.idPlayer %>" method="get">
                  <button type="submit">Edit</button>
                </form>
                <form action="../player/delete/<%= data.idPlayer %>" method="get">
                  <button type="submit">Delete</button>
                </form>
              </th>
            </tr>
          <% } %>
        </tbody>
      </table>
      <form action="../player/add" method="get">
        <button id="add-button">Add Participant</button>
      </form>
    </div>
  </body>
</html>
